<!-- Overview -->
<fieldset id="" class="fieldset-dark my-2">
	<legend class="mb-2">
		<h6 class="">Overview</h6>
	</legend>
	
	<!-- Package Id, Package Enabled -->
	<div class="row mx-1">
		
		<!-- Package Id -->
		<div class="col-6 col-md-8 col-lg-6 col-xl-4 px-1">
			<div id="package_id-wrap" class="form-element">
				<label id="package_id-label" for="package_id" class="">Id:</label>
				<input type="text" id="package_id" name="package_id" class="form-control" readonly="readonly"/>
				<div id="package_id-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		</div>
		<!-- /Package Id -->
		
		<!-- Package Enabled -->
		<div class="col-6 col-md-4 col-lg-2 col-xl-2 d-flex align-items-end justify-content-end pb-2 px-1">
			<div class="form-element">
				<div class="custom-control custom-switch">
					<input id="package_enabled" name="package_enabled" type="checkbox" value="1" class="custom-control-input">
					<label for="package_enabled" class="custom-control-label p-0">Enabled</label>
				</div>
				<div id="product_edit_season_form_season_enabled-error" class="error w-100 text-center"></div>
			</div>
		</div>
		<!-- /Package Enabled -->
	
	</div>
	<!-- /Package Id, Package Enabled -->
	
	<!-- Package Name -->
	<div class="row mx-1">
		
		<!-- Package Name -->
		<div class="col-12 px-1">
			<div id="package_name_filter-wrap" class="form-element">
				<label id="package_name_filter-label" for="package_name_filter" class="d-none">Name:</label>
				<div class="input-group">
					<div class="input-group-prepend">
                                            <span class="input-group-text">
	                                            <i class="fas fa-search" aria-hidden="true"></i>
                                            </span>
					</div>
					<input type="text" id="package_name_filter" name="package_name_filter" class="form-control" placeholder="Package Name"/>
					<div id="package_name_filter-error" class="error w-100 text-center">&nbsp;</div>
				</div>
			</div>
		</div>
		<!-- /Package Name -->
	
	</div>
	<!-- /Package Name -->
	
	<!-- Package Cost, Package Margin, Package Price -->
	<div class="row mx-1">
		
		<!-- Package Cost -->
		<div class="col-4 px-1">
			<div id="package_cost-wrap" class="form-element">
				<label id="package_cost-label" for="package_cost" class="">Cost:</label>
				<div class="input-group">
					<div class="input-group-prepend">
											<span id="package_cost_icon" class="input-group-text">
											
											</span>
					</div>
					<input type="text" id="package_cost" name="package_cost" class="form-control"/>
				</div>
				<div id="package_cost-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		</div>
		<!-- /Package Cost -->
		
		<!-- Package Margin -->
		<div class="col-4 px-1">
			<div id="package_margin-wrap" class="form-element">
				<label id="package_margin-label" for="package_margin" class="">Margin:</label>
				<div class="input-group">
					<div class="input-group-prepend">
											<span id="package_margin_icon" class="input-group-text">
											
											</span>
					</div>
					<input type="text" id="package_margin" name="package_margin" class="form-control"/>
				</div>
				<div id="package_margin-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		</div>
		<!-- /Package Margin -->
		
		<!-- Package Price -->
		<div class="col-4 px-1">
			<div id="package_price-wrap" class="form-element">
				<label id="package_price-label" for="package_price" class="">Price:</label>
				<div class="input-group">
					<div class="input-group-prepend">
											<span id="package_price_icon" class="input-group-text">
											
											</span>
					</div>
					<input type="text" id="package_price" name="package_price" class="form-control"/>
				</div>
				<div id="package_price-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		</div>
		<!-- /Package Price -->
	
	</div>
	<!-- /Package Cost, Package Margin, Package Price -->

</fieldset>
<!-- /Overview -->

<!-- Detail -->
<fieldset id="" class="fieldset-dark my-2">
	<legend class="mb-2">
		<h6 class="">Detail</h6>
	</legend>
	
	<!-- Package Day Span -->
	<div class="row mx-1">
		
		<div class="col-5 col-md-5 col-lg-3 col-xl-3 px-1">
			
			<label id="package_day_span-label" for="package_day_span" class="form-label-popover d-flex justify-content-start">Day Span:</label>
		
		</div>
		
		<div class="col-7 col-md-7 col-lg-9 col-xl-9 px-1">
			
			<div class="input-group d-flex justify-content-end number-input">
				<div id="package_day_span_dec" class="input-group-prepend">
									<span data-direction="dec" class="input-group-text">
                                        <i class="fas fa-minus"></i>
                                    </span>
				</div>
				<div id="package_day_span-wrap" class="form-element mb-0">
					
					<input type="number" id="package_day_span" name="package_day_span" class="form-control rounded-0 m-0 quantity" min="1" value="1" onclick="this.select()" onchange="let min = (this.min)?parseInt(this.min):0;if(parseInt(this.value)<min){this.value = 1}" placeholder="">
				
				</div>
				<div id="package_day_span_inc" data-direction="inc" class="input-group-append">
									<span class="input-group-text">
										<i class="fas fa-plus"></i>
									</span>
				</div>
			</div>
		
		</div>
	
	</div>
	<!-- /Package Day Span -->
	
	<!-- Package Min Pax -->
	<div class="row mx-1">
		
		<div class="col-5 col-md-5 col-lg-3 col-xl-3 px-1">
			
			<label id="package_min_pax-label" for="package_min_pax" class="form-label-popover d-flex justify-content-start">Min Pax:</label>
		
		</div>
		
		<div class="col-7 col-md-7 col-lg-9 col-xl-9 px-1">
			
			<div class="input-group d-flex justify-content-end number-input">
				<div id="package_min_pax_dec" class="input-group-prepend">
									<span data-direction="dec" class="input-group-text">
                                        <i class="fas fa-minus"></i>
                                    </span>
				</div>
				<div id="package_min_pax-wrap" class="form-element mb-0">
					
					<input type="number" id="package_min_pax" name="package_min_pax" class="form-control rounded-0 m-0 quantity" min="1" value="1" onclick="this.select()" onchange="let min = (this.min)?parseInt(this.min):0;if(parseInt(this.value)<min){this.value = 1}" placeholder="">
				
				</div>
				<div id="package_min_pax_inc" data-direction="inc" class="input-group-append">
									<span class="input-group-text">
										<i class="fas fa-plus"></i>
									</span>
				</div>
			</div>
		
		</div>
	
	</div>
	<!-- /Package Min Pax -->
	
	<!-- Package Max Pax -->
	<div class="row mx-1">
		
		<div class="col-5 col-md-5 col-lg-3 col-xl-3 px-1">
			
			<label id="package_max_pax-label" for="package_max_pax" class="form-label-popover d-flex justify-content-start">Max Pax:</label>
		
		</div>
		
		<div class="col-7 col-md-7 col-lg-9 col-xl-9 px-1">
			
			<div class="input-group d-flex justify-content-end number-input">
				<div id="package_max_pax_dec" class="input-group-prepend">
									<span data-direction="dec" class="input-group-text">
                                        <i class="fas fa-minus"></i>
                                    </span>
				</div>
				<div id="package_max_pax-wrap" class="form-element mb-0">
					
					<input type="number" id="package_max_pax" name="package_max_pax" class="form-control rounded-0 m-0 quantity" min="1" value="1" onclick="this.select()" onchange="let min = (this.min)?parseInt(this.min):0;if(parseInt(this.value)<min){this.value = 1}" placeholder="">
				
				</div>
				<div id="package_max_pax_inc" data-direction="inc" class="input-group-append">
									<span class="input-group-text">
										<i class="fas fa-plus"></i>
									</span>
				</div>
			</div>
		
		</div>
	
	</div>
	<!-- /Package Max Pax -->
	
	<!-- Package Available Start, Package Available End, Package City Id -->
	<div class="row mx-1">
		
		<!-- Package Available Start -->
		<div class="col-6 col-md-6 col-lg-4 col-xl-4 px-1">
			
			<div id="package_available_start_input-wrapper" class="form-element input-group">
				<label id="package_available_start_input-label" for="package_available_start_input" class="d-none">Start Date:</label>
				<input type="search" id="package_available_start_input" name="package_available_start_input" class="form-control w-100" maxlength="10" placeholder="Available Start Date" data-type="start_date">
				<div class="input-group-append">
					<button type="button" id="package_available_start_button" name="package_available_start_button" class="input_from btn btn-md m-0 px-3 py-2 z-depth-0 waves-effect waves-light" tab-index="-1">
						<i class="fas fa-calendar-day"></i>
					</button>
				</div>
				<div id="package_available_start_input-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		
		</div>
		<!-- /Package Available Start -->
		
		<!-- Package Available End -->
		<div class="col-6 col-md-6 col-lg-4 col-xl-4 px-1">
			
			<div id="package_available_end_input-wrapper" class="form-element input-group">
				<label id="package_available_end_input-label" for="package_available_end_input" class="d-none">End Date:</label>
				
				<input type="search" id="package_available_end_input" name="package_available_end_input" class="form-control w-100" maxlength="10" placeholder="Available End Date" data-type="end_date">
				
				<div class="input-group-append">
					<button type="button" id="package_available_end_button" name="package_available_end_button" class="input_from btn btn-md m-0 px-3 py-2 z-depth-0 waves-effect waves-light" tab-index="-1">
						<i class="fas fa-calendar-day"></i>
					</button>
				</div>
				<div id="package_available_end_input-error" class="error w-100 text-center">&nbsp;</div>
			</div>
		</div>
		<!-- /Package Available End -->
		
		<!-- Package City Id -->
		<div class="col-12 col-lg-4 col-xl-4 px-1">
			<div id="package_city_name_filter-wrap" class="form-element">
				<label id="package_city_name_filter-label" for="package_city_name_filter" class="d-none">City Name Search:</label>
				<div class="input-group">
					<div class="input-group-prepend">
                                            <span class="input-group-text">
	                                            <i class="fas fa-search" aria-hidden="true"></i>
                                            </span>
					</div>
					<input type="search" id="package_city_name_filter" name="package_city_name_filter" class="form-control" placeholder="City Name"/>
				</div>
				<div id="package_city_name_filter-error" class="error w-100 text-center"></div>
			</div>
		</div>
		<!-- /Package City Id -->
	
	</div>
	<!-- /Package Available Start -->

</fieldset>
<!-- /Detail -->

