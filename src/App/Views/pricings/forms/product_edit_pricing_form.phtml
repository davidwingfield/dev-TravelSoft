		</div>
	
	</div>
	
	<!-- Pricing Container -->
	<div class="pricing_container" id="pricing_container">
		
		<!-- Product Edit Matrix Form -->
		<div id="product_edit_matrix_form"></div>
		<!-- /Product Edit Matrix Form -->
	
	</div>
	<!-- /Pricing Container -->

</section>
