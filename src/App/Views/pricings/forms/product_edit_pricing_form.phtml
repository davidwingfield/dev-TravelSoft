					</div>
					<!-- /Pricing Strategy Types Id -->
					
					<!-- Unit Id -->
					<div class="col-4 mb-2">
						<div class="form-element">
							<label for="pricing_strategy_unit_id" class="d-flex justify-content-between">
                        <span>
                            Unit:
                        </span>
								<a href="javascript:void(0);" class="text-primary" onclick='PricingStrategy.clearUnitSelection()' style="text-transform: uppercase">
									<small>clear</small>
								</a>
							</label>
							<select id="pricing_strategy_unit_id" name="pricing_strategy_unit_id" class="form-control" multiple></select>
							<div id="pricing_strategy_unit_id-error" class="error w-100 text-center"></div>
						</div>
					</div>
					<!-- /Unit Id -->
					
					<!-- Season Id -->
					<div class="col-4 mb-2">
						<div class="form-element">
							<label for="pricing_strategy_season_id" class="d-flex justify-content-between">
                        <span>
                            Season:
                        </span>
								<a href="javascript:void(0);" class="text-primary" onclick='PricingStrategy.clearSeasonSelection()' style="text-transform: uppercase">
									<small>clear</small>
								</a>
							</label>
							<select id="pricing_strategy_season_id" name="pricing_strategy_season_id" class="form-control" multiple></select>
							<div id="pricing_strategy_season_id-error" class="error w-100 text-center"></div>
						</div>
					</div>
					<!-- /Season Id -->
				
				</div>
				<!-- /pricing_strategy_types_id, pricing_strategy_unit_id, pricing_strategy_season_id -->
				
				<div class="row">
					
					<div class="col-4 mb-2">
						<div class="row">
							<div class="col-12 mb-1">
								<button type="button" id="button_toggle_completed_pricings" class="btn btn-primary btn-sm btn-block waves-effect waves-light" data-shown="true">Hide Completed Pricings</button>
							</div>
						</div>
						<div class="row">
							<div class="col-12">
								<button type="button" id="button_toggle_completed_matrices" class="btn btn-primary btn-sm btn-block waves-effect waves-light" data-shown="true">Hide Completed Matrices</button>
							</div>
						</div>
					</div>
					
					<!-- Unit Id -->
					<div class="col-4 mb-2">
						<button type="button" id="button_collapse_units" class="btn btn-primary btn-sm btn-block waves-effect waves-light">Collapse Units</button>
					</div>
					<!-- /Unit Id -->
					
					<!-- Season Id -->
					<div class="col-4 mb-2">
						<button type="button" id="button_collapse_seasons" class="btn btn-primary btn-sm btn-block waves-effect waves-light">Collapse Seasons</button>
					</div>
					<!-- /Season Id -->
				
				</div>
				
				<div class="row">
					<!-- Reset Button -->
					<div class="col-12 text-right">
						<button type="button" id="product_edit_pricing_section_reload_worksheet" class="btn btn-outline-primary btn-sm waves-effect waves-light">Reload Worksheet</button>
						<button type="button" id="product_edit_pricing_section_reset_filters" class="btn btn-primary btn-sm waves-effect waves-light">Reset Filters</button>
					</div>
					<!-- /Reset Button -->
				</div>
			
			</div>
			<!-- /Filters -->
		
		</div>
		
		<div class="col-12 col-md-4 mb-2">
			
			<ul class="list-group">
				<li class="list-group-item d-flex justify-content-between align-items-center">
