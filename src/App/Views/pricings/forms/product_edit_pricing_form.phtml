<!-- Pricing Section -->
<section id="product_edit_pricing_section" class="section">
	<div class="row">
		
		<div class="col-12 col-md-8 mb-2">
			
			<!-- Filters -->
			<div class="card card-body mb-2">
				
				<!-- pricing_strategy_types_id, pricing_strategy_unit_id, pricing_strategy_season_id -->
				<div class="row">
					
					<!-- Pricing Strategy Types Id -->
					<div class="col-4 mb-2">
						<div class="form-element">
							<label for="pricing_strategy_types_id" class="d-flex justify-content-between"><span>Pricing Strategy Types:</span></label>
