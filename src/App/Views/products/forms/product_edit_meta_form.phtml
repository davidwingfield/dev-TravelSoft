                    <input class="user-release-input form-control form-control-lg" type="text" placeholder="Amenities..."/>
                    <div class="container my-2 chips_container">
                    
                    </div>
                </div>
            </div>
        </div>
        <!-- /Product Amenities -->
    
    </div>
