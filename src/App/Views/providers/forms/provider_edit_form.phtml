<!-- Edit Provider Form -->
<form id="form_edit_provider" name="form_edit_provider" class="" style="" novalidate>
    
    <!-- Panel -->
    <section class="panel z-depth-0 w-100 mb-0" style="">
        
        <!-- Panel Heading -->
        <header class="panel-heading" style="">
            <div class="row">
                
                <!-- Panel Heading Title -->
                <div class="col-8">
                    <h4 class="panel-title">Provider Details</h4>
                </div>
                <!-- /Panel Heading Title -->
                
                <!-- Panel Heading Actions -->
                <div class="col-4 d-flex align-items-center justify-content-end" style="">
                    <div class="panel-actions p-0 m-0" style="">
                        
                        <div class="custom-control custom-switch" style="">
                            <input id="provider_enabled" type="checkbox" value="1" class="custom-control-input" style="">
                            <label for="provider_enabled" class="custom-control-label" style="">Enabled</label>
                        </div>
                    
                    </div>
                </div>
                <!-- /Panel Heading Actions -->
            
            </div>
        </header>
        <!-- /Panel Heading -->
        
        <!-- Panel Body -->
        <div class="panel-body px-0 w-100" style="">
            
            <div class="row" style="">
                
                <!-- Provider Name -->
                <div class="col-12 col-lg-4 " style="">
                    <div class="form-element" style="">
                        <label for="provider_name" style="">Provider Name:</label>
                        <div class="input-group">
                            <input type="search" id="provider_name" name="provider_name" class="form-control" style="" aria-label="Vendor Id" placeholder="" autocomplete="off"/>
                            <div class="input-group-append">
                                <button class="btn btn-md btn-primary m-0 px-3 py-2 z-depth-0 waves-effect" type="button" id="button_edit_provider_name">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>
                        <div id="provider_name-error" class="error w-100 text-center" style="">&nbsp;</div>
                    </div>
                </div>
                <!-- /Provider Name -->
                
                <!-- Provider Id -->
                <div class="col-12 col-lg-3 " style="">
                    <div class="form-element" style="">
                        <label for="provider_id" style="">Provider Id:</label>
                        <input type="text" id="provider_id" name="provider_id" class="form-control" style="" aria-label="Provider Id" placeholder="" autocomplete="off" readonly/>
                        <div id="provider_id-error" class="error w-100 text-center" style="">&nbsp;</div>
                    </div>
                </div>
                <!-- /Provider Id -->
                
                <!-- Provider Company Id -->
                <div class="col-12 col-lg-3 " style="">
                    <div class="form-element" style="">
                        <label for="provider_company_id" style="">Provider Company Id:</label>
                        <input type="text" id="provider_company_id" name="provider_company_id" class="form-control" style="" aria-label="Provider Id" placeholder="" autocomplete="off" readonly/>
                        <div id="provider_company_id-error" class="error w-100 text-center" style="">&nbsp;</div>
                    </div>
                </div>
                <!-- /Provider Company Id -->

            </div>
            
            <div class="row" style="">
                
                <!-- Code Direct Id -->
                <div class="col-12 col-lg-6 " style="">
                    <div class="form-element">
                        <label for="provider_code_direct_id">Code Direct Id:</label>
                        <input type="text" id="provider_code_direct_id" name="provider_code_direct_id" class="form-control" style="" aria-label="Provider Code Direct Id" placeholder="" autocomplete="off"/>
                        <div id="provider_code_direct_id-error" class="error w-100 text-center">&nbsp;</div>
                    </div>
                </div>
                <!-- /Code Direct Id -->
            
            </div>
        
        </div>
        <!-- /Panel Body -->
        
        <!-- Panel Footer -->
        <div class="panel-footer pb-0 text-right">
            <button class="btn btn-primary btn-sm" type="button" id="button_submit_form_edit_provider">Save Provider Details</button>
        </div>
        <!-- /Panel Footer -->
    
    </section>
    <!-- /Panel -->

</form>
<!-- /Edit Provider Form -->
